{
  "manifest_version": 3,
  "name": "GenStudio Customer Lens",
  "version": "4.0",
  "description": "Filter GenStudio for Performance Marketing by customer: tag personas, products, assets, templates and dropdown options, toggle tagging mode, and persist filters across GS4PM sections.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus",
    "webNavigation"
  ],
  "host_permissions": [
    "https://experience.adobe.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Customer Lens",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://experience.adobe.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}